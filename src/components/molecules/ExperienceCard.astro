---
interface Props {
  employer: string
  date: string
  role: string
}
const { employer, date, role } = Astro.props
---

<article>
  <header>
    <h3>{employer}</h3>
    <p>{date}</p>
  </header>

  <p class="text-bold">{role}</p>
  <p class="text-opacity-80">
    <slot />
  </p>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    gap: 8px;
    border: 2px solid green;
  }
  header {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: baseline;
  }
</style>
