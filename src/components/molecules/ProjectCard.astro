---
import Github from "../icons/Github.astro"
import Web from "../icons/Web.astro"
import ButtonTransparent from "../atoms/ButtonTransparent.astro"

interface Props {
  title: string
  imgSrc: string
  type: string
  href: string
  gitHub?: string
  web?: string
}
const { title, imgSrc, type, href, gitHub, web } = Astro.props
---

<article>
  <a href={href}>
    <img src={imgSrc} />
    <h3>{title}</h3>
    <p class="text-opacity-80 text-bold">{type}</p>
    <p class="text-opacity-80">
      <slot />
    </p>
  </a>
  {
    (gitHub || web) && (
      <footer>
        {gitHub && (
          <ButtonTransparent href={gitHub}>
            <Github />
            Github
          </ButtonTransparent>
        )}

        {web && (
          <ButtonTransparent href={web}>
            <Web />
            Web
          </ButtonTransparent>
        )}
      </footer>
    )
  }
</article>

<style>
  article {
    width: auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
    border: 2px solid blue;
    border-radius: 32px;
    padding: 16px;
  }
  a {
    color: white;
    text-decoration: none;
  }
  img {
    width: 100%;
    margin-bottom: 8px;
    border-radius: 16px;
  }
  footer {
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    align-items: end;
    gap: 8px;
  }
</style>
