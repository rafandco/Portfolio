---
interface Props {
  href: string
}

const { href } = Astro.props
---

<a class="a-icons" href={href}><slot /></a>
<style>
  a {
    width: auto;
    height: 24px;
    display: flex;
    align-items: center;
    gap: 8px;
    border-radius: 24px;
    margin: 0;
    padding: 8px 16px;
    text-decoration: none;
    color: var(--wheat-medium);
    background-color: rgba(255, 255, 255, 0.1);
  }
  a:hover {
    color: var(--wheat-dark);
    background-color: rgba(255, 255, 255, 0.2);
  }
</style>
