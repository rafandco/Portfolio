---
interface Props {
  href: string
}

const { href } = Astro.props
---

<a href={href}>
  <slot />
</a>

<style>
  a {
    padding: 8px 16px;
    border-radius: 24px;
    color: var(--wheat-medium);
    text-decoration: none;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0);
  }

  a:hover {
    text-decoration: none;
    color: var(--wheat-medium);

    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0);
  }
</style>
