---
import "../styles/global.css"
import Footer from "../components/organisms/Footer.astro"
import BackButton from "../components/atoms/BackButton.astro"
import ButtonTransparent from "../components/atoms/ButtonTransparent.astro"
import Github from "../components/icons/Github.astro"
import Web from "../components/icons/Web.astro"
import Document from "../components/icons/Document.astro"

const { frontmatter } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <header>
      <BackButton href="/#proyectos">Atrás</BackButton>
      <h1>{frontmatter.title}</h1>
    </header>
    <main>
      <!-- TODO: Componetizar imagenes de img-wrapper-bento -->
      {
        frontmatter.bentoMockupSrc1 &&
          frontmatter.bentoMockupSrc2 &&
          frontmatter.bentoMockupSrc3 && (
          <div class="img-wrapper-bento">
            <img
              class="mockups"
              src={frontmatter.bentoMockupSrc1}
              alt="Mockup"
              style="grid-column: 1 / 3;
          grid-row: 1 / 3;"
            />
            <img
              class="mockups"
              src={frontmatter.bentoMockupSrc2}
              alt="Mockup"
              style="grid-column: 3 / 4;
          grid-row: 1 / 2;"
            />{" "}
            <img
              class="mockups"
              src={frontmatter.bentoMockupSrc3}
              alt="Mockup"
              style="grid-column: 3 / 4;
          grid-row: 2 / 3;"
            />
          </div>
        )
      }
      {
        (frontmatter.gitHub || frontmatter.web || frontmatter.pdf) && (
          <div class="button-wrapper">
            {frontmatter.gitHub && (
              <ButtonTransparent href={frontmatter.gitHub}>
                <Github />
                Github
              </ButtonTransparent>
            )}

            {frontmatter.web && (
              <ButtonTransparent href={frontmatter.web}>
                <Web />
                Web
              </ButtonTransparent>
            )}

            {frontmatter.pdf && (
              <ButtonTransparent href={frontmatter.pdf}>
                <Document />
                PDF
              </ButtonTransparent>
            )}
          </div>
        )
      }

      <slot />
    </main>
    <Footer />
  </body>
</html>
<style>
  body {
    gap: 0px;
  }

  header {
    width: 960px;
    grid-area: header;
    position: fixed;
    left: 50%;
    top: 0px;
    bottom: auto;
    transform: translateX(-50%);
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
    margin: 0px auto 0px auto;
    padding: var(--card-padding);
    background-color: var(--gray-dark-transparent);
    backdrop-filter: var(--blur);
    -webkit-backdrop-filter: var(--blur);
    border-bottom: 2px solid var(--gray-light);
  }

  main {
    grid-area: main;
    width: 960px;
    display: flex;
    gap: 32px;
    align-items: stretch;
    padding: 84px var(--card-padding) 0px var(--card-padding);
    margin: 32px auto;
  }

  .img-wrapper-bento {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, auto);
    justify-items: stretch;
    align-items: stretch;
    grid-gap: 16px;
  }

  .mockups {
    aspect-ratio: auto 3/2;
    width: 100%;
    border-radius: 16px;
  }

  .button-wrapper {
    display: flex;
    flex-direction: row;
    gap: 16px;
  }

  /* Media query para tablets */
  @media (min-width: 768px) and (max-width: 1023px) {
    header,
    main {
      width: 768px;
    }

    main {
      padding: 74px var(--card-padding) 0px var(--card-padding);
    }
  }

  /* Media query para dispositivos móviles */
  @media (max-width: 767px) {
    header,
    main {
      width: 360px;
    }

    main {
      padding: 74px var(--card-padding) 0px var(--card-padding);
      margin: 16px auto 32px auto;
    }

    .img-wrapper-bento {
      display: flex;
      flex-direction: column;
      grid-gap: 16px;
    }
  }
</style>
