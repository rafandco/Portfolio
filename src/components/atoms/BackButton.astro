---
import ChevronLeft from "../icons/ChevronLeft.astro"
interface Props {
  href: string
}

const { href } = Astro.props
---

<a href={href}>
  <ChevronLeft />
  <slot />
</a>

<style>
  a {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    color: var(--wheat-medium);
    text-decoration: none;
    font-weight: 600;
  }
  a:hover {
    text-decoration: none;
    color: var(--wheat-dark);
  }
</style>
