---
interface Props {
  title: string
  id: string
}

const { title, id } = Astro.props
---

<section id={id}>
  <h2>{title}</h2>
  <slot />
</section>

<style>
  section {
    width: 960px;
    height: auto;
    display: flex;
    flex-direction: column;
    padding: 16px;
    gap: 16px;
  }
  /* Media query para dispositivos m√≥viles */
  @media (max-width: 767px) {
    section {
      width: 360px;
    }
  }

  /* Media query para tablets */
  @media (min-width: 768px) and (max-width: 1023px) {
    section {
      width: 768px;
    }
  }
</style>
