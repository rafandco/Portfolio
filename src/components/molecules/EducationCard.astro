---
import University from "../icons/University.astro"
import Google from "../icons/Google.astro"
interface Props {
  institution: string
  date: string
  title: string
}
const { institution, date, title } = Astro.props
---

<article>
  <header>
    <div class="icon-wrapper">
      {
        institution.includes("Universidad") ? (
          <University />
        ) : institution.includes("Google") ? (
          <Google />
        ) : (
          console.error("Error, no hay icono en la instituci√≥n")
        )
      }
    </div>
    <div class="info-wrapper">
      <h4>
        {title}
      </h4>
      <p class="text-bold">{institution}</p>
      <p class="text-opacity-80">{date}</p>
    </div>
  </header>

  <p class="text-opacity-80">
    <slot />
  </p>

  <style>
    article {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    header {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 16px;
    }
    .icon-wrapper {
      display: flex;
      align-items: center;
      justify-items: center;
      background-color: var(--gray-light);
      color: var(--wheat-medium);
      padding: 8px;
      margin: 8px;
      border-radius: 24px;
    }
    .info-wrapper {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
  </style>
</article>
