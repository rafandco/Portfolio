---
interface Props {
  id: string
}

const { id } = Astro.props
---

<section id={id}>
  <slot />
</section>

<style>
  section {
    width: 960px;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    padding: var(--card-padding);
    padding-top: 176px;
  }

  /* Media query para dispositivos m√≥viles */
  @media (max-width: 767px) {
    section {
      width: 360px;
      padding: 64px var(--card-padding);
    }
  }

  /* Media query para tablets */
  @media (min-width: 768px) and (max-width: 1023px) {
    section {
      width: 768px;
    }
  }
</style>
