---
interface Props {
  employer: string
  date: string
  role: string
}
const { employer, date, role } = Astro.props
---

<article>
  <header>
    <h3>{employer}</h3>
    <p class="text-opacity-80">{date}</p>
  </header>

  <p class="text-bold">{role}</p>
  <p class="text-opacity-80">
    <slot />
  </p>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: var(--card-padding);
    background-color: var(--gray-medium);
    border-radius: 16px;
    border: var(--card-border);
    box-shadow: var(--box-shadow);
  }
  header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: baseline;
  }
  /* Media query para dispositivos m√≥viles */
  @media (max-width: 767px) {
    header {
      flex-direction: column;
      gap: 8px;
    }
  }
</style>
